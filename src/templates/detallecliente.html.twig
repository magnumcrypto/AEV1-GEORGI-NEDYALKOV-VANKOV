            											        <td>{{ pedido.PEDIDO_NUM  }}</td>
            											        <td>{{ pedido.PEDIDO_FECHA  }}</td>
            											        <td>{{ pedido.PEDIDO_TIPO  }}</td>
            											        <td>{{ pedido.CLIENTE_COD  }}</td>
            											        <td>{{ pedido.FECHA_ENVIO }}</td>
            											        <td>{{ pedido.TOTAL }}</td>
            											    </tr>
            											{% endfor %}
        											</tbody>
    											</table>
												
										</div>
									</div>
